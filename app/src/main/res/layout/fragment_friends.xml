<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.mifly.streamdemo.fragment.FriendsFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/myScrollingContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:padding="10dp"
                >

                <FrameLayout
                    android:id="@+id/layout_frame"
                    android:layout_width="110dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="70dp">

                    <ImageView
                        android:id="@+id/img_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"
                        />
                </FrameLayout>

                <RelativeLayout
                    android:layout_toRightOf="@+id/layout_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/downloadView"
                    >

                    <TextView
                        android:id="@+id/task_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:singleLine="true"
                        android:textColor="@color/colorAccent"
                        android:layout_alignParentTop="true"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/task_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SiaVEVO"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/secondary_text_dark"
                        />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/downloadView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
